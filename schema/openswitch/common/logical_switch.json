{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "common/logical_switch.json#",
  "name": "OpenSwitch",
  "version": "0.1.8",
  "tables": {
    "Logical_Switch": {
      "columns": {
        "name": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "string",
              "maxLength": 80
            },
            "min": 0,
            "max": 1
          },
          "doc": [
            "Name of the overlay network."
          ]
        },
        "description": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "string",
              "maxLength": 80
            },
            "min": 0,
            "max": 1
          },
          "doc": [
            "Description of the overlay network."
          ]
        },
        "bridge": {
          "category": "configuration",
          "relationship": "m:1",
          "type": {
            "key": {
              "type": "uuid",
              "refTable": "Bridge",
              "refType": "weak"
            }
          },
          "mutable": false,
          "doc": [
            "Reference to a [Bridge](Bridge) participating in the overlay."
          ]
        },
        "tunnel_key": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "integer",
              "minInteger": 0,
              "maxInteger": 4294967295
            }
          },
          "mutable": false,
          "doc": [
            "Tunnel key used in the overlay. For VXLAN, this is the VNI."
          ]
        },
        "from": {
          "category": "configuration",
          "type": {
            "key": {
              "enum": [
                "hw-vtep"
              ],
              "type": "string"
            },
            "min": 0,
            "max": 1
          },
          "doc": [
            "The entity managing the overlay."
          ]
        },
        "mcast_group_ip": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "string",
              "maxLength": 45
            },
            "min": 0,
            "max": 1
          },
          "doc": [
            "Optional. Multicast group IP."
          ]
        },
        "replication_group_ips": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "string",
              "maxLength": 45
            },
            "min": 0,
            "max": "unlimited"
          },
          "doc": [
            "Optional. Replication group IPs."
          ]
        },
        "ip_addr": {
          "category": "configuration",
          "type": {
            "key": {
              "type": "string",
              "maxLength": 45
            },
            "min": 0,
            "max": 1
          },
          "doc": [
            "Optional. Routed network IP address."
          ]
        }
      },
      "indexes": [
        [
          "bridge",
          "tunnel_key"
        ]
      ],
      "isRoot": true,
      "doc": [
        "Configuration for identifying overlay networks associated with bridges."
      ]
    }
  }
}
